            <TestSize>1300</TestSize>
          </Input>
          <Input>
            <Name>dstStride</Name>
            <Description>
              <Content>dst stride</Content>
            </Description>
            <Datatype>uint32_t</Datatype>
            <TestSize>1600</TestSize>
          </Input>
        </InputList>
        <OutputList>
          <Output>
            <Name>imgDst</Name>
            <Description>
              <Content>output dst buffer</Content>
            </Description>
            <Datatype>uint8_t*</Datatype>
            <TestSize>1600*1300*3/2</TestSize>
          </Output>
        </OutputList>
